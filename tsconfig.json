{
  "compilerOptions": {
    "target": "es2017",
    "types": ["cypress"],
    "lib": [
			"es2015",
			"es2016",
			"es2017",
			"es2018",
			"dom",
			"dom.iterable",
			"esnext"
		],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "./src",
  //  "outDir": "./dist",
    "paths": {
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@services/*": ["services/*"],
      "@store/*": ["store/*"],
      "@interfaces/*": ["interfaces/*"],
      "@utils/*": ["utils/*"],
      "@views/*": ["views/*"]
    },
    "plugins": [{ "transform": "ts-optchain/transform" }],
    "strict": true,
		"strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
  //  "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "tests",
    "jest.config.js",
    "cypress.config.ts",
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.cjs"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test/**/*",
    "ci/**/*",
    "scripts/**/*",
    "__mocks__/**/*",
    "**/node_modules/**/*",
    "**/dts/**/*",
    "**/dist/**/*",
    "**/*.(spec|test).ts"
  ],
  "compileOnSave": true,
  "typeAcquisition": {
    "enable": true
  }
}
